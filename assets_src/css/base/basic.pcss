html {
  touch-action: manipulation;
  overflow-y: scroll;
}

body {
  background: #Fff;
  color: #000;
  font: 500 14px / 1.75 'Spartan', sans-serif;
  -webkit-text-size-adjust: 100%;
}

input,
button {
  font: inherit;
  letter-spacing: inherit;
}

h1,
h2,
 {
  font-family: 'Blacker Pro', serif;
  font-size: 20px;
}

h2 {
  font-size: 18px;
}

h3 {
  font-size: 16px;
  font-weight: 600;
}

h4 {
  font-size: 14px;
}

a {
  color: inherit;
  text-decoration: none;
}

ul {
  list-style: none;
}

::selection {
  background: rgba(0, 0, 0, .2);
}

section {
  position: relative;
}

.wrapper {
  align-items: stretch;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  position: relative;
}

@media (--mobile) {
  html[lang] {
    margin-top: 0 !important;

    #wpadminbar {
      display: none !important;
    }
  }
}
