.image-fullwidth {

  &__img-wrapper {
    position: relative;

    &::after {
      content: '';
      display: block;
      padding-bottom: 55.55%;
    }

    img {
      background: #D8D8D8;
      display: block;
      object-fit: cover;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }
}