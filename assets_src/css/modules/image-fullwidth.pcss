.image-fullwidth {
  margin-bottom: 30px;

  &:last-child {
    margin-bottom: 0 !important;
  }

  &::after {
    content: '';
    display: block;
    padding-bottom: 55.5%;
  }

  @media (--laptop-up) {
    margin: 30px 0 63px;
    max-height: 800px;
  }

  @media (min-width: 1920px) {
    /*max-width: 1760px;*/
    margin: 30px auto 63px;
  }

  img {
    position: absolute;
    height: 100%;
    width: 100%;
    display: block;
    object-fit: cover;
  }
}
