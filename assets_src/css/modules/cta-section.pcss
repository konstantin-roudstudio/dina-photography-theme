.cta {
  &--cream {
    background-color: #F2F0EC;
  }

  &__inner {
    padding: 55px 0 68px;

    @media (--tablet-up) {
      padding: 90px 30px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    @media (--desktop-up) {
      padding: 186px 140px 170px 85px;
    }
  }

  &__title {
    font: 500 28px/1.1 'Antiqua', serif;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin-bottom: 43px;

    @media (--laptop-up) {
      font-size: 38px;
      margin-bottom: 25px;
    }
  }

  &__img-wrapper {
    position: relative;

    @media (--mobile) {
      margin-bottom: 43px;
    }

    &.mob {
      @media (--tablet-up) {
        display: none;
      }
    }

    &.desktop {
      display: none;

      @media (--tablet-up) {
        display: block;
        width: 29%;
        max-width: 308px;
        flex-shrink: 0;
      }
    }

    &::after {
      content: '';
      display: block;
      padding-bottom: 100%;
    }

    @media (--tablet-up) {
      max-width: 450px;
    }
  }

  &__img {
    display: block;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  &__content {
    @media (--tablet-up) {
      //width: 57%;
      max-width: 550px;
      padding-left: 50px;
    }
  }

  &__text {
    margin-bottom: 22px;

    @media (--desktop-up) {
      margin-bottom: 32px;
    }
  }

  &__btn {
    padding: 12px 28px;
    min-height: 43px;

    @media (--tablet-up) {
      margin-right: 41px;
    }
  }

  &__link-wrapper {
    @media (--tablet-up) {
      display: flex;
      align-items: center;
    }
  }

