  &__link {
    display: none;
    font-size: 13px;
    line-height: 1.23;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    position: relative;
    padding-bottom: 7px;

    &::before {
      background: currentColor;
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      right: 0;
      width: 100%;
      height: 1px;
      transition: transform .2s ease;
    }

    &:hover::before {
      transform: translateY(-3px);
    }

    @media (--tablet-up) {
      display: inline-flex;
    }
  }
}