.hero-slider {
  &__inner {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;

    @media (--tablet-down) {
      min-height: -webkit-fill-available;
    }

    @media (--laptop-up) {
      min-height: 100vh;
    }

    @media (--desktop-up) {
      /* min-height: calc(100vh + 100px); */
      min-height: calc(100vh + 130px);
    }

    @media (min-width: 1920px) {
      min-height: 100vh;
    }
  }

  &__content {
    color: #fff;
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    pointer-events: none;
    padding: 100px 16px 67px;
    flex-grow: 0;

    @media (--laptop-up) {
      padding: 200px 20px 62px;
      margin: 0;
    }

    @media (--desktop-up) {
      padding: 350px 20px 62px;
      flex-direction: row;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    @media (min-width: 1920px) {
      padding: 200px 20px 62px;
    }

    .hero-slider__text {
      @media (--mobile) {
        display: none;
      }
    }
  }

  &__content-mobile {
    position: relative;
    bottom: -2px;
    z-index: 1;
    padding: 40px 16px;
    background-color: #fff;
    color: #000;

    p {
      margin-bottom: 21px;
    }

    @media (--tablet-up) {
      display: none;
    }
  }

  &__text {
    @media (--tablet-up) {
      margin: 0 0 52px;
      column-count: 2;
      column-gap: 26px;
    }

    @media (--desktop-up) {
      margin: 0 0 32px auto;
      max-width: 644px;
      padding-top: 0;
    }

    @media (min-width: 1920px) {
      padding: 50px 0;
    }
  }

  .swiper-container {
    position: absolute;
    height: 100%;
    width: 100%;

    @media (--tablet-up) {
      //pointer-events: none;

    }

    &::before,
    &::after {
      content: '';
      position: absolute;
      width: 100%;
      opacity: 0.5;
      z-index: 3;
      pointer-events: none;
      left: 0;
      right: 0;
    }

    &::before {
      height: 17vh;
      background: linear-gradient(180deg, #000000 0%, rgba(0, 0, 0, 0.0001) 100%);
    }

    &::after {
      height: 63vh;
      bottom: 0;
      background: linear-gradient(180deg, rgba(0, 0, 0, 0.0001) 0%, #000000 100%);
    }
  }

  .swiper-slide {
    overflow: hidden;

    img {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  &__nav {
    pointer-events: auto;
    position: relative;
    width: fit-content;
    margin: auto;

    @media (--tablet-up) {
      margin: 0 0 30px 0;
    }

    @media (--desktop-up) {
      margin: 12px 0 30px -13px;
    }
  }

  &__nav-inner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 250px;
  }

  .swiper-button-prev,
  .swiper-button-next {
    width: 65px;
    top: 50%;
    opacity: 1;
    color: transparent;

    &::after {
      display: none;
    }

    span {
      position: relative;
      height: 1px;
      width: 54px;
      background-color: #fff;

      &::before,
      &::after {
        content: '';
        position: absolute;
        width: 0;
        height: 0;
        border-style: solid;
        top: calc(50% - 4px);
      }
    }

    &.swiper-button-disabled {
      opacity: .4;
      pointer-events: none;
    }
  }

  .swiper-button-prev {
    span {
      &::before {
        left: -3px;
        border-width: 4px 5px 4px 0;
        border-color: transparent #fff transparent transparent;
      }
    }
  }

  .swiper-button-next {
    span {
      &::after {
        right: -3px;
        border-width: 4px 0 4px 6px;
        border-color: transparent transparent transparent #fff;
      }
    }
  }

  &__numbers {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  &__number {
    line-height: 1.21;
    min-width: 20px;
    padding: 0 5px;
  }

  &__slash {
    position: relative;
    width: 16px;
    height: 30px;

    &::before {
      content: '';
      position: absolute;
      display: block;
      left: 50%;
      top: 0;
      width: 1px;
      height: 100%;
      transform: rotate(30deg);
      background-color: #fff;
    }
  }

  &__title {
    text-transform: uppercase;
    letter-spacing: 0.019em;
    max-width: 810px;
    line-height: 1.1;
    margin-bottom: 44px;

    @media (--mobile) {
      text-align: center;
    }

    @media (--laptop-up) {
      line-height: 1.12;
      font-size: 47px;
      margin-bottom: 20px;
    }

    @media (--desktop-up) {
      font-size: 52px;
      margin: 0 300px 62px 0;
    }

    @media (min-width: 1920px) {
      margin: 0 300px 20px 0;
    }
  }

  &__destinations {
    display: none;
    font-size: 13px;
    line-height: 1.23;
    letter-spacing: 0.026em;
    text-transform: uppercase;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 0 3px;

    @media (--tablet-up) {
      display: flex;
    }
  }

  &__destination {
    position: relative;
    align-items: center;
    text-align: center;
    display: block;
  }

  &__dot {
    display: block;
    width: 4px;
    height: 4px;
    background-color: currentColor;
    border-radius: 50%;
    margin-bottom: 2px;
  }
}
