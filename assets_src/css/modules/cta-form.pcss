.cta-form {
  padding: 30px 0;

  @media (--laptop-up) {
    padding: 115px 0 104px;
  }

  &__center {}

  &__content {
    max-width: 643px;
    margin: auto;
  }

  &__title {
    font-size: 28px;
    line-height: 1.1;
    text-align: center;
    margin-bottom: 30px;

    @media (--laptop-up) {
      font-size: 38px;
      max-width: 600px;
      margin: 0 auto 52px;
    }
  }

  &--cream {
    background: #F2F0EC;
  }
}
