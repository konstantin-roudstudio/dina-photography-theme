.cta-form {
  padding: 30px 0;

  @media (--laptop-up) {
    padding: 115px 0 104px;
  }

  &__center {}

  &__content {
    max-width: 643px;
    margin: auto;
  }

  &__title {
    font-size: 28px;
    line-height: 1.1;
    text-align: center;
    margin-bottom: 30px;

    @media (--laptop-up) {
      font-size: 38px;
      margin-bottom: 50px;
    }
  }

  &__field {
    border: 1px solid #000000;
    border-radius: 25px;
    background: transparent;
    height: 50px;
    outline: none;
    padding: 0 24px 0 26px;

    &--narrow {
      width: 100%;
      margin-bottom: 25px;
    }

    &--select {
      width: 100%;
      cursor: pointer;
      -moz-appearance: none;
      -webkit-appearance: none;
      appearance: none;
      margin-bottom: 25px;

      &::-ms-expand {
        display: none;
      }

    }

    &--textarea {
      width: 100%;
      border-radius: 15px;
      height: 104px;
      margin-bottom: 23px;
      padding: 10px 24px 10px 26px;
      resize: none;
    }
  }

  &--cream {
    background: #F2F0EC;
  }
}